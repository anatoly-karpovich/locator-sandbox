# Log level for winston; e.g. debug | info | warn | error.
LOG_LEVEL=debug
# Directory for JSONL log files.
LOG_DIR=logs
# Enable console logging: true | false.
LOG_TO_CONSOLE=true

# Number of Playwright browser instances to keep warm.
PLAYWRIGHT_MAX_BROWSERS=2
# Maximum contexts per browser before queueing.
PLAYWRIGHT_MAX_CONTEXTS_PER_BROWSER=5
# Max queued acquire requests before rejecting.
PLAYWRIGHT_QUEUE_LIMIT=100
# Max time (ms) a request can wait in the queue.
PLAYWRIGHT_QUEUE_TIMEOUT_MS=5000
# Graceful wait (ms) for active contexts before forced shutdown.
PLAYWRIGHT_GRACEFUL_SHUTDOWN_MS=5000

# Total retry budget (ms) for acquiring a context.
PLAYWRIGHT_RETRY_TOTAL_MS=10000
# Initial delay (ms) for Fibonacci backoff.
PLAYWRIGHT_RETRY_INITIAL_DELAY_MS=50
# Upper bound (ms) for Fibonacci backoff delay.
PLAYWRIGHT_RETRY_MAX_DELAY_MS=1000

# Overall app shutdown timeout (ms) including server close + browser shutdown.
PLAYWRIGHT_SHUTDOWN_TIMEOUT_MS=10000
